<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.furqoncreative.githubusers3">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.furqoncreative.githubusers3.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GithubUsers2"
        android:fullBackupContent="@xml/backup_descriptor">
        <activity
            android:name="com.furqoncreative.githubusers3.ui.detailuser.DetailUserActivity"
            android:label="@string/text_detail_user"/>
        <activity android:name="com.furqoncreative.githubusers3.ui.intro.SplashActivity"
            android:theme="@style/Theme.GithubUsers2.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.furqoncreative.githubusers3.ui.main.MainActivity"/>
    </application>

</manifest>